# Spring Boot Warehouse Management System Environment Configuration
# Database Configuration (MySQL)
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/warehouse?useUnicode=true&characterEncoding=utf8&useSSL=false&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=123456

# Server Configuration
SERVER_PORT=8888

# Druid Connection Pool Settings
SPRING_DATASOURCE_DRUID_INITIAL_SIZE=1
SPRING_DATASOURCE_DRUID_MAX_ACTIVE=20
SPRING_DATASOURCE_DRUID_MAX_WAIT=5000
SPRING_DATASOURCE_DRUID_MIN_IDLE=1

# MyBatis-Plus Configuration
MYBATIS_PLUS_MAPPER_LOCATIONS=classpath*:mapper/**/*Mapper.xml
MYBATIS_PLUS_GLOBAL_DB_CONFIG_ID_TYPE=auto

# Shiro Configuration
SHIRO_HASH_ALGORITHM_NAME=md5
SHIRO_HASH_ITERATIONS=2